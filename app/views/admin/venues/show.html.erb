<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDhyJ3SWFP8U5Xmqe3H3X_iOsR1nw1v6_Q&&libraries=places"></script>
<%= javascript_include_tag "admin/venues.js" %>
<div class="row full-height margin-left-0 margin-right-0">
  <div class="col-md-5 max-height-x padding-left-0 padding-right-0">
    <div class="map-info full-height">
      <div id="gmap_canvas" class="map-show full-height"></div>
    </div>
  </div>
  <div class="col-md-7 max-height-x padding-left-0 padding-right-0 scroll-y">
    <div id="space_button">
      <%= render "space_of_venue" %>
    </div>
    <div class="venue_title">
      <%#= @venue.name %>
    </div>
    <div class="block full">
      <div class="row margin-left-0 margin-right-0">
        <div class="col-md-1"></div>
        <div class="col-md-10">       
          <div class="name-title">
            <strong><%= t "admin.venues.name" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.name %>
          </div>       
          <div class="name-title">
            <strong><%= t "admin.venues.address" %></strong>
          </div>
          <div class="form-control" id="address" data-address="<%= @venue.address.details %>">
            <%= @venue.address_details %>
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.city" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.address_city %>
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.street_address" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.address_street_address %>
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.postal_code" %></strong>
          </div>
          <div class="form-control" class="col-md-6">
            <%= @venue.address_postal_code %> 
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.unit" %></strong>
          </div>
          <div class="form-control" class="col-md-6">
            <%= @venue.address_unit %> 
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.phone_number" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.phone_number %>
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.email" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.email %>
          </div>
          <div class="name-title">
            <strong><%= t "admin.venues.website" %></strong>
          </div>
          <div class="form-control">
            <%= @venue.website %>
          </div>     
        </div>
      </div>
    </div>
  </div>
</div>
